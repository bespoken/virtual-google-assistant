{
  "compileOnSave": true,
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowJs": false,
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "sourceMap": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["node_modules"]
}